<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../commons/head.ejs %>
    </head>
    <body>
        <% include ../commons/top.ejs %>
        <div class="g-wrap">
            <% include ../commons/header.ejs %>
            <div class="g-body">
                <!--page start-->
                <div style="display: none;" class="page-tab">
                    <div class="page-tab-password">密码登录</div>
                    <div class="page-tab-verify">验证码登陆</div>
                </div>
                <div class="g-form-wrap">
                    <div class="g-form">
                        <label class="g-form-body">
                            <span class="g-form-body-text">账号:</span>
                            <span class="g-form-body-content">
                                <span class="g-form-body-content-main">
                                    <input class="g-input g-validate-form" data-validate="no-empty no-zero yes-positive-integer" data-hint="本项必填 本项不可为零 请输入正整数" type="text" name="username" id="username" value="" placeholder="请输入邮箱">
                                </span>
                                <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                            </span>
                        </label>
                    </div>
                    <div class="g-form">
                        <label class="g-form-body">
                            <span class="g-form-body-text">密码:</span>
                            <span class="g-form-body-content">
                                <span class="g-form-body-content-main">
                                    <input class="g-input" type="password" name="password" id="password" value="" placeholder="请输入密码">
                                </span>
                                <span class="g-form-body-content-icon iconfont icon-eye_off"></span>
                                <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                            </span>
                        </label>
                    </div>
                </div>
                <div class="g-button page-login">
                    <div class="g-button-text">立即登陆</div>
                </div>
                <div class="g-jump-guide">
                    <a href="<%= dataInfo.routes['register'].route %>" class="g-jump-guide-item">
                        <span class="g-jump-guide-item-text">没有账号,去注册</span>
                        <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                    </a>
                    <a href="<%= dataInfo.routes['password-find'].route %>" class="g-jump-guide-item">
                        <span class="g-jump-guide-item-text">忘记密码,去找回</span>
                        <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                    </a>
                </div>

                <div style="display: none;" class="page-third-party">
                    第三方登陆
                </div>
                <!--page end-->
            </div>
            <% include ../commons/footer.ejs %>
        </div>
        <% include ../commons/bottom.ejs %>
    </body>
</html>
