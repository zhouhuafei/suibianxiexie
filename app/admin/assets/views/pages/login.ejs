<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../commons/head.ejs %>
    </head>
    <body>
        <% include ../commons/top.ejs %>
        <div class="g-wrap">
            <% include ../commons/menu.ejs %>
            <div class="g-body">
                <form id="form" method="post" action="<%= dataInfo.api.login.route %>">
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <span class="g-form-text">用户名:</span>
                            <label class="g-form-body">
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-main">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="text" name="username" id="username" value="" placeholder="请输入用户名">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                        <div class="g-form">
                            <span class="g-form-text">密码:</span>
                            <label class="g-form-body">
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-main">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="password" name="password" id="password" value="" placeholder="请输入密码">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                        <div class="g-form">
                            <span class="g-form-text">验证码:</span>
                            <label class="g-form-body">
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-main">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="text" name="verify-code-canvas" id="verify-code-canvas" value="" placeholder="请输入验证码">
                                    </span>
                                    <span class="g-verify-code-canvas"><img src="<%= dataInfo.page.verifyCodeCanvas.base64 %>" alt=""></span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-button js-button g-margin-top-10">登陆</div>
                    <div class="g-jump-guide">
                        <a href="<%= dataInfo.routes['register'].route %>" class="g-jump-guide-item">
                            <span class="g-jump-guide-item-text">没有账号,去注册</span>
                            <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                        </a>
                        <div class="g-jump-guide-item js-del-db">
                            <span class="g-jump-guide-item-text">忘记密码,去删库</span>
                            <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% include ../commons/bottom.ejs %>
    </body>
</html>
