<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../commons/head.ejs %>
    </head>
    <body>
        <% include ../commons/top.ejs %>
        <div class="g-wrap">
            <% include ../commons/menu.ejs %>
            <div class="g-body">
                <form id="form" method="post" action="<%= dataInfo.api['password-modify'].route %>">
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">旧用户名:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="text" name="old-username" id="old-username" value="" placeholder="请输入旧用户名">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">新用户名:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input" type="text" name="new-username" id="new-username" value="" placeholder="请输入新用户名，此项是非必填项，不填则用户名不会被更改">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">旧密码:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="password" name="old-password" id="old-password" value="" placeholder="请输入旧密码">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">新密码:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="password" name="new-password" id="new-password" value="" placeholder="请输入新密码">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">重复新密码:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="password" name="repeat-new-password" id="repeat-new-password" value="" placeholder="请再次输入新密码">
                                    </span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-form-wrap">
                        <div class="g-form">
                            <label class="g-form-body">
                                <span class="g-form-body-text">验证码:</span>
                                <span class="g-form-body-content">
                                    <span class="g-form-body-content-body">
                                        <input class="g-input js-validate-form"
                                               data-validate="no-empty"
                                               data-hint="本项必填"
                                               type="text" name="verify-code-canvas" id="verify-code-canvas" value="" placeholder="请输入验证码">
                                    </span>
                                    <span class="g-verify-code-canvas"><img src="<%= dataInfo.page.verifyCodeCanvas.base64 %>" alt=""></span>
                                    <span class="g-form-body-content-icon iconfont icon-clear"></span>
                                    <span class="g-form-body-content-icon g-form-body-content-hint iconfont icon-required"></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="g-button js-button">修改</div>
                    <div class="g-jump-guide">
                        <a href="<%= dataInfo.routes['login'].route %>" class="g-jump-guide-item">
                            <span class="g-jump-guide-item-text">想起密码,去登陆</span>
                            <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                        </a>
                        <div class="g-jump-guide-item js-del-db">
                            <span class="g-jump-guide-item-text">忘记密码,去删库</span>
                            <span class="g-jump-guide-item-icon iconfont icon-right"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% include ../commons/bottom.ejs %>
    </body>
</html>
