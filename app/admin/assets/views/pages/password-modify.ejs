<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../commons/head.ejs %>
    </head>
    <body>
        <% include ../commons/top.ejs %>
        <div class="g-wrap">
            <% include ../commons/menu.ejs %>
            <div class="g-body">
                <form method="post" action="<%= dataInfo.api['password-modify'].route %>" id="form">
                    <div class="page-item">
                        <label class="g-input">
                            <span class="g-input-text">用户名:</span>
                            <input class="g-input-input page-validate-form"
                                   data-validate="no-empty"
                                   data-hint="本项必填"
                                   type="text" name="username" id="username" value="" placeholder="请输入用户名">
                            <span class="g-input-icon iconfont icon-clear"></span>
                            <span class="g-input-hint iconfont icon-required"></span>
                        </label>
                    </div>
                    <div class="page-item">
                        <label class="g-input">
                            <span class="g-input-text">旧密码:</span>
                            <input class="g-input-input page-validate-form"
                                   data-validate="no-empty"
                                   data-hint="本项必填"
                                   type="password" name="old-password" id="old-password" value="" placeholder="请输入旧密码">
                            <span class="g-input-icon iconfont icon-clear"></span>
                            <span class="g-input-hint iconfont icon-required"></span>
                        </label>
                    </div>
                    <div class="page-item">
                        <label class="g-input">
                            <span class="g-input-text">新密码:</span>
                            <input class="g-input-input page-validate-form"
                                   data-validate="no-empty"
                                   data-hint="本项必填"
                                   type="password" name="new-password" id="new-password" value="" placeholder="请输入新密码">
                            <span class="g-input-icon iconfont icon-clear"></span>
                            <span class="g-input-hint iconfont icon-required"></span>
                        </label>
                    </div>
                    <div class="page-item">
                        <label class="g-input">
                            <span class="g-input-text">重复新密码:</span>
                            <input class="g-input-input page-validate-form"
                                   data-validate="no-empty"
                                   data-hint="本项必填"
                                   type="password" name="repeat-new-password" id="repeat-new-password" value="" placeholder="请再次输入新密码">
                            <span class="g-input-icon iconfont icon-clear"></span>
                            <span class="g-input-hint iconfont icon-required"></span>
                        </label>
                    </div>
                    <div class="g-button js-button">修改</div>
                    <div class="page-guide-wrap">
                        <a href="<%= dataInfo.routes['login'].route %>" class="page-guide-item">
                            <span>想起密码,去登陆</span>
                            <span class="iconfont icon-right"></span>
                        </a>
                        <div class="page-guide-item js-del-db">
                            <span>忘记密码,去删库</span>
                            <span class="iconfont icon-right"></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% include ../commons/bottom.ejs %>
    </body>
</html>
